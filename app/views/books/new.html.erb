<h1>New Book Form</h1>
<p>Add a new book below for donation:</p>
<%= form_for @book do |f| %>
<p>
	<%= f.label :title %><br />
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :author %><br />
	<%= f.text_field :author %>
</p>
<p>
	<%= f.label :year %><br />
	<%= f.text_field :year %>
</p>
<p>
	<%= f.label :isbn %><br />
	<%= f.text_field :isbn %>
</p>
<p>
	<%= f.label :genre %><br />
	<%= f.text_field :genre %>
</p>


<p><%= f.submit %></p>
<% end %>

<%= link_to 'Go to index', books_index_path %>